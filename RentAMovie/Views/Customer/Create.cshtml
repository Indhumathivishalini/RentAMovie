@model RentAMovie.ViewModel.CustomerMembershipViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
    </div>

    <div>
        @Html.LabelFor(c => c.Customer.DateOfBirth)
        @Html.EditorFor(c => c.Customer.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })


    </div>

    <div>
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes, "Id","MembershipTypeName"),"--Select--",
       new { @class = "form-control" })
    </div>
    <div>
        <input type="submit" name="btnsubmit" value="submit" />
    </div>
}

@section scripts{

    @Scripts.Render("~/scripts/jqueryui");

    @Styles.Render("~/scripts/jquerycss");

    <script>
        $("#Customer_DateOfBirth").datepicker({
            changeYear: true,
            changeMonth: true
        });
    </script>
}